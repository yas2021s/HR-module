									if(data.cid > 0){ 
										$('#message1').empty();
										$('#name').val(data.name);
										$('input#dob').val(data.dob);
									}else{ 
										$('#message1').html(data.message);
										$('#name').val("");
										$('input#dob').val("");
									}
								},
								'json'
							)
						).done(function(){
							$('span#panel').html("<i class='fa fa-user-o bigger-110'></i>");
						});
					});
					
				}
			});
		});
	});
</script>