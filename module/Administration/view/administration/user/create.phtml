			fv.validateField('cid').then(function(status) {
				if(status == 'Valid'){
					$.when(
						$('span#panel').html("<i class='fa fa-spinner fa-spin red bigger-110'></i>"),
						$('#message1').empty(),
						$('#name').val(""),
						$('input#dob').val(""),
					).done(function(){
						$.when(
							$.post(
								"<?php echo $this->url('user', array('action' => 'getuserciddtl')); ?>",
								{
									cid: $('#cid').val(),
								},
